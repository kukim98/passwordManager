{
	"manifest_version": 2,
	"name": "Password Manager",
	"version": "2.1",
	"description": "Manages your passwords for different websites.",
	"permissions": [
		"storage",
		"webNavigation"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"jquery-3.4.1.min.js",
				"psl.min.js",
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_icon": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
      },
			"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
	"options_page": "options.html"
}
